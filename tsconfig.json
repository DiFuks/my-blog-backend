{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "app",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@di/*": ["di/*"],
      "@services/*": ["services/*"],
      "@dto/*": ["dto/*"],
      "@entities/*": ["entities/*"],
      "@enum/*": ["enum/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "app/**/*.ts"
  ]
}
